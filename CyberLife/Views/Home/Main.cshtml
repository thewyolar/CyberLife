            <div class="col">
                <button id="stop" type="button" class="btn btn-danger" onClick="stop()">Stop</button>
            </div>
            <div class="col">
                <button id="restart" type="button" class="btn btn-info" onClick="restart()">Restart</button>
            </div>
            <div class="col">
                <input id="speedSwitcher"type="range" min="-100" max="100" step="10" value="0" onChange="changeSpeed(this.value)">
            </div>
